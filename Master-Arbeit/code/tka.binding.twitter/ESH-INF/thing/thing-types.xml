<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="twitter" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Twitter Binding -->
	<thing-type id="twitter">
		<label>Twitter Information</label>
		<description>Allows the user to interact with Twitter.</description>

		<channels>
			<channel id="status" typeId="status" />
		</channels>

	</thing-type>

	<channel-type id="status">
		<item-type>String</item-type>
		<label>Status</label>
		<description>The current status</description>
		<category>Who chares about the category</category>
		<state readOnly="false"></state>
	</channel-type>

</thing:thing-descriptions>
